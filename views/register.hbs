<div class="row my-5">
  <div class="col-10 col-md-8 col-lg-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Register</h1>
      <div style="height: 3rem;">{{> message}}</div>      
      <form action="/users/register" method="POST">
        <div class="form-group login-input-group">
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{ name }}">
          <label class="label" id="label-reg-name" for="name">Name</label>
        </div>
        <div class="form-group login-input-group">
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="{{ email }}">
          <label class="label" id="label-reg-email" for="email">Email</label>
        </div>
        <div class="form-group login-input-group">
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
            value="{{ password }}">
          <label class="label" id="label-reg-pd" for="password">Password</label>
        </div>
        <div class="form-group login-input-group">
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Confirm Password" value="{{ confirmPassword }}">
          <label class="label" id="label-reg-cpd" for="confirmPassword">Confirm Password</label>
        </div>
        <button type="submit" class="btn login-btn btn-block">Register</button>
        <a href="/auth/facebook" class="btn fb-login-btn btn-block"><i
            class="fab fa-facebook-square fa-lg mr-2"></i>Continue with Facebook</a>
      </form>
      <p class="lead mt-4">
        Have an Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>