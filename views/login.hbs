<div class="row my-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="form-group login-input-group">
          <input type="email" id="email" name="email" class="form-control input-area" placeholder="Enter Email">
          <label class="label" id="label-login-email" for="email">Email</label>
        </div>
        <div class="form-group login-input-group">
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
          <label class="label" id="label-login-pd" for="password">Password</label>
        </div>
        <button type="submit" class="btn login-btn btn-block">Login</button>
        <a href="/auth/facebook" class="btn fb-login-btn btn-block"><i
            class="fab fa-facebook-square fa-lg mr-2"></i>Login with Facebook</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>